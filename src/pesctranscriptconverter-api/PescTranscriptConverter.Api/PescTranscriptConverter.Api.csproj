    <PackageReference Include="FluentStorage.Azure.Blobs" Version="5.2.3" />
    <PackageReference Include="FluentStorage.Azure.Files" Version="5.2.2" />
    <PackageReference Include="FluentStorage.GCP" Version="5.2.2" />
    <PackageReference Include="Gotenberg.Sharp.API.Client" Version="2.3.0" />
    <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.21.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\PescTranscriptConverter.ServiceDefaults\PescTranscriptConverter.ServiceDefaults.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\assets\**\*.*" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <None Update="..\..\..\assets\*">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
